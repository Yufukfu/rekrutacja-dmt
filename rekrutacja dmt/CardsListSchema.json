{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/file1.schema.json",
    "title": "list of cards",
    "description": "This document",
    "type": "object",
    "properties": {
        "cards": {
            "description": "array of cards",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {

                    "track2": {
                        "description": "format developed by the banking industry (ABA)",
                        "type": "string",
                        "pattern": "^;[0-9]{0,19}=[0-9]{8,}\\?$"
                    },
                    "firstName": {
                        "description": "first name of card owner",
                        "type": "string",
                        "maxLength":  50
                    },
                    "lastName": {
                        "description": "last name of card owner",
                        "type": "string",
                        "maxLength": 50
                    },
                    "age": {
                        "description": "age of card owner",
                        "type": "integer"
                    },
                    "address": {
                        "description": "",
                        "type": "object",
                        "properties": {
                            "city": {
                                "description": "",
                                "type": "string",
                                "maxLength": 50
                            },
                            "zipCode": {
                                "description": "",
                                "type": "string",
                                "pattern": "(^[0-9]{2}-[0-9]{3}$)|(^[0-9]{5}$)"
                            }
                        }
                    },
                    "type": {
                        "description": "",
                        "enum": [ "owner", "employee" ]
                    },
                    "company": {
                        "description": "",
                        "type": "string"
                    }
                },
                "if": {
                    "properties": { "type": { "const": "employee" } }
                },
                "then": {
                    "required": [ "company" ]
                },
                "additionalProperties": false
            },
            "minItems": 1
        }
    }
} 
